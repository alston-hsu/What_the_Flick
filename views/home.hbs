<div class="row">
    <div class="col col-3"></div>
    <div class="col col-6 text-center">
        <h2 class="heading top-margin">What the Flick?</h2>
    </div>
    <div class="col col-3"></div>
</div>

<div class="row top-inside-margin">
    <div class="col col-3 black"></div>
    <div class="col col-6 text-left">
        <img id="homePic" src="/public/images/cinema-2093264.jpg">
    </div>
    <div class="col col-3"></div>
</div>

<div class="row top-inside-margin">
    <div class="col col-3"></div>
    <div class="col col-6">
        <form action="/getGenre" method="post">
            <div class="col col-12 text-center">
             <label>Select a Genre</label>
            </div>
            <div class="col col-12 text-center top-inside-margin">
                <select name="genreChoice">
                    <option selected="All" value="All">All</option>
                    {{#each genres}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col col-12 text-center top-inside-margin bottom-margin">
                <button id="homeNewGame-button" type="submit">New Game</button>
            </div>
        </form>
    </div>
    <div class="col col-3"></div>
</div>
