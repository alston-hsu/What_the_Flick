<div class="row top-margin heading">
    <div class="col col-4"></div>
    <div class="col col-4 text-center">
        <h2 onclick="scrollCreds()" class="heading">High Scores</h2>
    </div>
    <div class="col col-4"> </div>
</div>
<div class="row margin-bottom">
    <div class="col col-4"></div>
    <div class="col col-4 text-center">
        <div class="row"><div class="col col-12"></div></div>
        <ol>
            {{#each results}}
                <li class="score" class="bottom-margin">{{username}} : {{score}}</li>
            {{/each}}
        </ol>
        <h2 class="margin-top">Thanks for Playing</h2>
        <a href="/" class="button" id="playAgain-button">Play Again</a>
    </div>
    <div class="col col-4"></div>
</div>

<script>
    function scrollCreds() {
        var movDiv = document.getElementById('movdiv');

        var pos = 999;
        var id = setInterval(credit, 1);
        function credit() {
            if (pos == 200) {
                var hiScores = document.querySelectorAll('.score');
                hiScores.forEach(function (hiScore) {
                   hiScore.style.height = 1 + 'rem';
                   hiScore.style.webkitAnimation = 'collapse 1s';

                });

                clearInterval(id)
            } else {
                pos--;
                movDiv.style.height = pos + 'px';
            }
        }
    }
    window.onload = scrollCreds()
</script>
